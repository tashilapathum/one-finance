<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        tools:text="Investment Title" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Some relevant details about this investment item such as dates and other noteworthy stuff." />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/investValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_invest"
            android:drawablePadding="4dp"
            android:drawableTint="@android:color/holo_red_light"
            android:gravity="center"
            android:padding="4dp"
            android:text="$24,000" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profitValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/ic_income"
            android:drawablePadding="4dp"
            android:drawableTint="@android:color/holo_blue_light"
            android:gravity="center"
            android:padding="4dp"
            android:text="$2,000" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/timePassed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/ic_minus"
            android:drawablePadding="4dp"
            android:drawableTint="@android:color/holo_green_light"
            android:gravity="center"
            android:padding="4dp"
            android:text="30 days" />

    </RelativeLayout>
</LinearLayout>