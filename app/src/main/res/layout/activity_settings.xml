                    android:layout_height="wrap_content"
                    android:text="@string/general"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="?colorThemeBasedAccent"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="editQuickList"
                    android:paddingVertical="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dp"
                        android:paddingEnd="8dp"
                        android:src="@drawable/ic_quick_list" />

                    <TextView
                        android:id="@+id/setting1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/image1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/settings_quick_list"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:id="@+id/description1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/setting1"
                        android:layout_toEndOf="@id/image1"
                        android:text="@string/edit_quick_list_items" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
