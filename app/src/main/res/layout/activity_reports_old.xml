<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
    tools:context=".Reports">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:elevation="8dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gotItCard"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More detailed reports are coming soon!"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:layout_centerVertical="true"
                            android:paddingHorizontal="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/gotIt"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Got it"
                            android:textAllCaps="false"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/today"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_today"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <TextView
                            android:id="@+id/todayIncome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_income" />

                        <TextView
                            android:id="@+id/todaySpent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_spent" />

                        <TextView
                            android:id="@+id/todayBudgetLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_budget" />

                        <TextView
                            android:id="@+id/todayPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:text="@string/budget_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/todayChart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="0.7" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/yesterday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="@string/r_yesterday"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <TextView
                            android:id="@+id/yesterIncome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_income" />

                        <TextView
                            android:id="@+id/yesterSpent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_spent" />

                        <TextView
                            android:id="@+id/yesterBudgetLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_budget" />

                        <TextView
                            android:id="@+id/yesterPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:text="@string/budget_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/yesterChart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="0.7" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/thisWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="@string/r_this_week"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <TextView
                            android:id="@+id/thisWeekIncome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_income" />

                        <TextView
                            android:id="@+id/thisWeekSpent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_spent" />

                        <TextView
                            android:id="@+id/thisWeekBudgetLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_budget" />

                        <TextView
                            android:id="@+id/thisWeekPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:text="@string/budget_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/thisWeekChart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="0.7" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/lastWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="@string/r_last_week"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <TextView
                            android:id="@+id/lastWeekIncome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_income" />

                        <TextView
                            android:id="@+id/lastWeekSpent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_spent" />

                        <TextView
                            android:id="@+id/lastWeekBudgetLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_budget" />

                        <TextView
                            android:id="@+id/lastWeekPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:text="@string/budget_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/lastWeekChart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="0.7" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/thisMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="@string/r_this_month"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <TextView
                            android:id="@+id/thisMonthIncome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_income" />

                        <TextView
                            android:id="@+id/thisMonthSpent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_spent" />

                        <TextView
                            android:id="@+id/thisMonthBudgetLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_budget" />

                        <TextView
                            android:id="@+id/thisMonthPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:text="@string/budget_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/thisMonthChart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="0.7" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/lastMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="@string/r_last_month"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <TextView
                            android:id="@+id/lastMonthIncome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_income" />

                        <TextView
                            android:id="@+id/lastMonthSpent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_spent" />

                        <TextView
                            android:id="@+id/lastMonthBudgetLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/r_budget" />

                        <TextView
                            android:id="@+id/lastMonthPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/budget_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/lastMonthChart"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="0.7" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>