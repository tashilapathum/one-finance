<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/billCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:padding="8dp">

        <TextView
            android:id="@+id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Account name" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/accountName"
            android:layout_alignParentStart="true"
            tools:text="$250.00" />

        <TextView
            android:id="@+id/inUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance"
            android:text="@string/in_use"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/accActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inUse"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="delete account"
                android:padding="8dp"
                android:src="@drawable/ic_delete" />

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="edit account"
                android:padding="8dp"
                android:src="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="info"
                android:padding="8dp"
                android:src="@drawable/ic_about" />

            <ImageButton
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="select account"
                android:padding="8dp"
                android:src="@drawable/ic_select" />

        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>